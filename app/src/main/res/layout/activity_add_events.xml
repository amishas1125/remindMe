<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resetpwdbg"
    android:orientation="vertical"
    tools:context=".ADD_EVENTS">

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/logout2"
        android:background="@drawable/baseline_logout_24"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/baloo_chettan"
        android:text="Add Events"
        android:textColor="@color/black"
        android:textSize="35dp" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:hint="Event Name"
        android:id="@+id/name_id"
        android:inputType="text"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_baseline_event_24"
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:ems="16"
        >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/location_id"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Location"
        android:inputType="text"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/baseline_location_on_24"
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:ems="16"
        >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/descid"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Event Description"
        android:inputType="text"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_baseline_description_24"
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:ems="16"
        >

    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/add_event"
        android:text="Add Event"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:backgroundTint="#5D88B1"
        android:background="@drawable/round_btn"
        android:textColor="#fff"
        android:ems="16"
        >

    </Button>





</LinearLayout>