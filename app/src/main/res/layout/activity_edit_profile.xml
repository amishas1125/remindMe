<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resetpwdbg"
    android:orientation="vertical"
    tools:context=".EditProfile">

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/logoutedit"
        android:background="@drawable/baseline_logout_24"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/baloo_chettan"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="35dp" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:id="@+id/editName"
        android:layout_gravity="center_horizontal"
        android:hint="Name"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/baseline_person_24"
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:ems="16"
        >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Phone No"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:id="@+id/editPhone"
        android:ems="16"
        >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Address"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/baseline_location_on_24"
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:ems="16"
        android:id="@+id/addressfield"
        >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Gender"
        android:id="@+id/gendertext"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/baseline_supervised_user_circle_24"
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:ems="16"
        >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Collge Name"
        android:id="@+id/collegetext"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/baseline_school_24"
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:ems="16"
        >

    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editbtn"
        android:text="Update Profile"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:backgroundTint="#5D88B1"
        android:background="@drawable/round_btn"
        android:textColor="#fff"
        android:ems="16"
        >

    </Button>



</LinearLayout>